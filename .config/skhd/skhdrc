# Change focus using cmd - {hjkl}
cmd - h : yabai -m window --focus west
cmd - l : yabai -m window --focus east
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north

# Change focus between external displays (left and right)
cmd - s: yabai -m display --focus west
cmd - g: yabai -m display --focus east

# Rotate the layout clockwise
shift + cmd - r : yabai -m space --rotate 270

# Flip along y-axis
shift + cmd - y : yabai -m space --mirror y-axis

# Flip along x-axis
shift + cmd - x : yabai -m space --mirror x-axis

# Toggle window float
shift + cmd - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Windows Resize
# Toggle Max size of Window
# WARNING: not working yet
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# Rebalance all windows size
# WARNING: not working yet
shift + alt - e : yabai -m space --balance
