[user]
    name=Junior Saldanha
    email=umsaldanha@gmail.com
    useConfigOnly=true
[core]
    editor = nvim
    pager = delta
    whitespace = -trailing-space,-space-before-tab,-indent-with-non-tab
    autocrlf = input
    excludesfile = ~/.config/git/ignore
[color]
    ui = auto
[init]
    defaultBranch = main
[alias]
    a = add
    c = commit
    d = diff
    f = commit --fixup
    g = pull # get
    p = push
    s = switch
    r = restore
    u = fetch # update
    st = status -sb
    aa = add -A
    ai = add --interactive
    ap = add --patch
    cm = commit --message
    ca = commit --amend
    cp = cherry-pick
    cpc = cherry-pick --continue
    ds = diff --staged
    dt = difftool
    nb = switch -c
    pf = push --force-with-lease
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbs = rebase --skip
    rbi = rebase --interactive
    rh = reset --hard HEAD
    sm = submodule
    # shortcuts for stash
    sl = stash list
    sp = stash pop
    ss = stash push
    sss = stash push --staged
    sc = stash clear
    fixup = commit --fixup
    # use patient diff
    diff = diff --patience
    # to undo add
    unstage = reset HEAD --
    # nice log
    l = log --graph --pretty=format:'%C(bold)%h%Creset%C(yellow)%d%Creset %C(red)%s%Creset%n        %ar (%ai)%n        %an <%ae>' --abbrev-commit --date=relative --all
    # define files as unchanged
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed = "!git ls-files -v | grep ^h | cut -c 3-"
    # create upstream branch and push
    pu = !git push -u origin $(git rev-parse --abbrev-ref HEAD)
    # Remove old (merged) branches
    cb = "!git branch --merged | grep -E -v '(^\\*|main|master|develop)' | xargs -r -n 1 git branch -d"
[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true

; This here will set ionic health as the default path for the git config
; This will garantee that commits will be made with the correct user and config
[includeIf "gitdir:~/ionichealth/"]
    path = ~/.config/git/ionichealth
[column]
	ui = auto
[branch]
	sort = -committerdate
